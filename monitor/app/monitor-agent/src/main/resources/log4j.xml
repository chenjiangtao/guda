<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">


	<appender name="DEFAULT-APPENDER"
		class="net.zoneland.mvc.runtime.core.log4j.DailyRollingFileAppender">
		<param name="file"
			value="${log4j.home}/logs/monitor-agent/common-default.log" />
		<param name="append" value="true" />
		<param name="encoding" value="UTF-8" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d - %c  %-5p - %m%n" />
		</layout>
	</appender>

	<appender name="ERROR-APPENDER"
		class="net.zoneland.mvc.runtime.core.log4j.DailyRollingFileAppender">
		<param name="file" value="${log4j.home}/logs/monitor-agent/common-error.log" />
		<param name="append" value="true" />
		<param name="encoding" value="UTF-8" />
		<param name="threshold" value="error" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d - %c  %-5p - %m%n" />
		</layout>
	</appender>


	<appender name="STDOUT-APPENDER" class="org.apache.log4j.ConsoleAppender">
		<param name="encoding" value="UTF-8" />
		<param name="target" value="System.out" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d - %c  %-5p - %m%n" />
		</layout>

	</appender>

	<appender name="STDERR-APPENDER" class="org.apache.log4j.ConsoleAppender">
		<param name="encoding" value="UTF-8" />
		<param name="target" value="System.err" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d - %c  %-5p - %m%n" />
		</layout>

	</appender>

	<appender name="NULL-APPENDER" class="org.apache.log4j.varia.NullAppender" />

	<appender name="APACHE-APPENDER"
		class="net.zoneland.mvc.runtime.core.log4j.DailyRollingFileAppender">
		<param name="file" value="${log4j.home}/logs/monitor-agent/common-apache.log" />
		<param name="append" value="true" />
		<param name="encoding" value="UTF-8" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d - %c  %-5p - %m%n" />
		</layout>
	</appender>

	<appender name="VELOCITY-APPENDER"
		class="net.zoneland.mvc.runtime.core.log4j.DailyRollingFileAppender">
		<param name="file"
			value="${log4j.home}/logs/monitor-agent/common-velocity.log" />
		<param name="append" value="true" />
		<param name="encoding" value="UTF-8" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d - %c  %-5p - %m%n" />
		</layout>
	</appender>






	<appender name="home-DEFAULT-APPENDER"
		class="net.zoneland.mvc.runtime.core.log4j.DailyRollingFileAppender">
		<param name="file" value="${log4j.home}/logs/monitor-agent/logs-default.log" />
		<param name="append" value="true" />
		<param name="encoding" value="UTF-8" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %-5p %c - %m%n" />
		</layout>
	</appender>


	<logger name="STDOUT" additivity="false">
		<level value="info" />
		<appender-ref ref="STDOUT-APPENDER" />
	</logger>

	<logger name="STDERR" additivity="false">
		<level value="info" />
		<appender-ref ref="STDERR-APPENDER" />
	</logger>

	<logger name="org.apache" additivity="false">
		<level value="info" />
		<appender-ref ref="APACHE-APPENDER" />
		<appender-ref ref="ERROR-APPENDER" />
	</logger>



	<logger name="org.springframework" additivity="false">
		<level value="INFO" />
		<appender-ref ref="DEFAULT-APPENDER" />
		<appender-ref ref="ERROR-APPENDER" />
	</logger>



	<logger name="com.foodoon.monitor.agent" additivity="false">
		<level value="INFO" />
		<appender-ref ref="DEFAULT-APPENDER" />
		<appender-ref ref="ERROR-APPENDER" />
	</logger>
	<logger name="com.foodoon" additivity="false">
		<level value="INFO" />
		<appender-ref ref="home-DEFAULT-APPENDER" />
		<appender-ref ref="ERROR-APPENDER" />
	</logger>
	<root>
		<level value="INFO" />
		<appender-ref ref="DEFAULT-APPENDER" />
		<appender-ref ref="ERROR-APPENDER" />
	</root>
</log4j:configuration>

